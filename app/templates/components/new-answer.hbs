{{#if addNewAnswer}}
  <h3>Post an Answer Below</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Answer:</label>
        {{textarea class="form-control" value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input class="form-control" value=author id="author"}}
      </div>

      <button class="btn btn-default" {{action 'saveAnswer'}}>Save Answer</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default" {{action 'showAnswerForm'}}>Post an Answer</button>
{{/if}}
<hr>
