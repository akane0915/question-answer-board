<h2>Help to solve this question!</h2><hr>

<div class="row">
  <div class="col-md-6">
    <h3>{{question.content}}</h3>
    <p>Posted by: {{question.author}}</p>
    <p>Notes: {{question.notes}}</p>

    {{update-question question=question updateQuestion="updateQuestion"}}<br>
    {{new-answer saveAnswer="saveAnswer" question=question}}

    <button class="btn btn-danger" {{action 'deleteQuestion' question}}>Delete Question</button>
  </div>

  <div class="col-md-6">
    <h3>Answers:</h3><br>
      {{#each question.answers as |answer|}}
        <p>{{answer.content}}</p>

        <p>Answer Rating: <img class="thumb-button" src="/img/thumbs-up.jpg"/> {{answer.thumbsUp}} <img class="thumb-button" src="/img/thumbs-down.jpg"/> {{answer.thumbsDown}}</p>

        <p>Posted by: {{answer.author}}</p>

        <button class="btn btn-default" {{action 'thumbsUp' answer}}><img class="thumb-button" src="/img/thumbs-up.jpg"/></button>

        <button class="btn btn-default" {{action 'thumbsDown' answer}}><img class="thumb-button" src="/img/thumbs-down.jpg"/></button><br><br>

        <button class="btn btn-danger" {{action 'deleteAnswer' answer}}>Delete Answer</button>
        <hr>
      {{/each}}
  </div>
</div>
